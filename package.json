{
  "name": "@aneuhold/main-scripts",
  "author": "Anton G. Neuhold Jr.",
  "license": "MIT",
  "version": "2.0.12",
  "description": "Main scripts for use personally on any platform",
  "packageManager": "yarn@4.5.1",
  "type": "module",
  "scripts": {
    "refresh": "yarn build && npm uninstall -g @aneuhold/main-scripts && npm i -g",
    "build": "rimraf lib && tsc --project tsconfig.build.json && shx cp -r src/templates/template-folders lib/templates && shx cp package.json lib/package.json",
    "lint": "eslint",
    "upgrade:core": "yarn up '@aneuhold/*'",
    "upgrade:all": "yarn up",
    "reset:global": "npm uninstall -g @aneuhold/main-scripts && npm i -g @aneuhold/main-scripts"
  },
  "main": "lib/index.js",
  "module": "lib/index.js",
  "bin": {
    "tb": "lib/index.js"
  },
  "files": [
    "lib/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aneuhold/main-scripts.git"
  },
  "bugs": {
    "url": "https://github.com/aneuhold/main-scripts/issues"
  },
  "homepage": "https://github.com/aneuhold/main-scripts#readme",
  "keywords": [
    "Scripting",
    "Node.js"
  ],
  "dependencies": {
    "@aneuhold/core-ts-lib": "^2.0.10",
    "@inquirer/prompts": "^7.3.2",
    "commander": "^12.1.0",
    "fluent-ffmpeg": "^2.1.3",
    "node-fetch": "^2.7.0"
  },
  "devDependencies": {
    "@aneuhold/eslint-config": "^1.0.67",
    "@types/fluent-ffmpeg": "^2.1.24",
    "@types/node": "^20.17.19",
    "@types/node-fetch": "^2.6.12",
    "eslint": "^9.21.0",
    "prettier": "^3.5.2",
    "rimraf": "^5.0.10",
    "shx": "^0.3.4",
    "tsx": "^4.19.3",
    "typescript": "^5.7.3"
  }
}
